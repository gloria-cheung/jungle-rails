<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.ends_on < Date.current %>
      <span class="badge rounded-pill bg-danger">Finished</span>
    <% elsif sale.starts_on > Date.current %>
      <span class="badge rounded-pill bg-warning">Upcoming</span> 
    <% else %>
      <span class="badge rounded-pill bg-success">Active</span>
    <% end%>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
  </td>
</tr>