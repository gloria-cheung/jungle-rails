<h1>Login</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">

    <%= form_tag '/sessions' do %>

      Email: <%= text_field_tag :email %>
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Submit" %>
    
    <% end %>
    
  </div>
  <p>If no account, <%= link_to 'Sign Up Now', new_user_path %> </p>
</div>